<div class="row" id="contributors">
  <h5 class="bold pie-title">Commits by Contributors</h5>
  <div class="col s12 m6">
    <svg viewBox="0 0 64 64" class="pie">
      <% offset = 0; count = 0 %>
      <% @repo.contributors_percents.each do |contributor, percent| %>
      <circle r="25%" cx="50%" cy="50%" class="<%= "color#{count}" %>" style="stroke-dasharray: <%= percent %> 100; stroke-dashoffset: -<%= offset %>"></circle>
      <% offset += percent; count += 1 %>
      <% end %>
    </svg>
  </div>
  <div class="col s12 m6">
    <% count = 0 %>
    <% @repo.contributors_percents.each do |contributor, percent| %>
    <ul>
      <li class="lang"> <%= embedded_svg 'box.svg', class: "color#{count} box" %> <%= "#{contributor} - #{percent}%" %> </li>
    </ul>
    <% count += 1 %>
    <% end %>
  </div>
</div>
